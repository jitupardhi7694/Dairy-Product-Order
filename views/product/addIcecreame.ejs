<%- include('../layout/partials/message.ejs') %>

  <div class="productContainerImage">
    <div class="productContainer">
      <div class="container">
        <div class="row">
          <div class="col-md-4 mt-4 add-left">
            <div class="container">
              <h4 class="card-text text-center mx-auto login-text">
                Icecreame Products
              </h4>
            </div>
            <form action="" method="post" enctype="multipart/form-data">
              <div class="container mt-4">
                <div class="row">
                  <div class="form-group">
                    <div class="mb-3">
                      <input type="text" class="form-control rounded-pill" id="name" placeholder="Icecreame Name"
                        name="name" value="<%= typeof name != 'undefined' ? name : '' %>" required />
                    </div>
                    <div class="mb-3">
                      <input type="text" class="form-control rounded-pill" id="price" placeholder="Price " name="price"
                        value="<%= typeof price != 'undefined' ? price : '' %>" required />
                    </div>
                    <div class="mb-3">
                      <input type="text" class="form-control rounded-pill" id="introduction" placeholder="Inroduction "
                        name="introduction" value="<%= typeof introduction != 'undefined' ? introduction : '' %>"
                        required />
                    </div>
                    <div class="mb-3">
                      <input type="text" class="form-control rounded-pill" id="rating" placeholder="Rating "
                        name="rating" value="<%= typeof rating != 'undefined' ? rating : '' %>" required />
                    </div>
                    <div class="mb-3">
                      <input type="file" class="form-control rounded-pill" id="product_image" placeholder="Image "
                        name="product_image" accept="image/*" required />
                    </div>
                  </div>
                </div>
                <div class="col-12 mx-auto text-center">
                  <button class="btn btn-primary rounded-pill" type="submit">
                    Submit
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>