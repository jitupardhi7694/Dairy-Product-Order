<div class="loginContainer " id="login-image-2">
    <div class="container ">
        <div class="row ">

            <div class="col-md-4 mt-4 login-left ">
                <div class="container">
                    <h4 class="card-text text-center mx-auto  login-text">USER LOGIN</h4>
                </div>
                <form action="">

                    <div class="container mt-4">
                        <div class="row">
                            <div class="form-group">
                                <div class="mb-3">

                                    <input type="email" class="form-control rounded-pill" id="formGroupExampleInput"
                                        placeholder="User Email" value="<%= typeof email != 'undefined' ? email : '' %>"
                                        required>
                                </div>
                                <div class="mb-3">

                                    <input type="password" class="form-control rounded-pill" id="formGroupExampleInput2"
                                        placeholder="User Password"
                                        value="<%= typeof password != 'undefined' ? password : '' %>" required>
                                </div>
                            </div>

                        </div>
                        <div class="col-12 mx-auto text-center  ">
                            <button class="btn btn-primary rounded-pill" type="submit">Login</button>
                        </div>
                        <div class="col-12 mx-auto text-center  ">
                            <div class=" flex">
                                <p class="text-light">No Account ?<a href="">Register</a></p>
                                <p class="text-light mx-2">Forget Password ?<a href="">Reset</a></p>
                            </div>
                        </div>

                        .
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>